<div class="edit-draft">
	<div class="container">
		<div class="row">
			<div class="col-md-2 col-lg-2"></div>
			<div class="col-sm-12 col-lg-9 col-md-9">
				<h1>Edit Draft</h1>
				<%= button_to("Delete", { action: 'destroy', id: @draft.id },
												method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger delete-button') %>
			</div>
		</div>
		<div class="edit-draft-form">
			<%= render 'form' %>
		</div>
	</div>
</div>
